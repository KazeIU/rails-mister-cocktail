<h1>Cocktail Details</h1>
<% @cocktail.doses.each do |dose| %>
  <h2><% dose.ingredient.name %></h2>
  <h2><%= dose.description %></h2>
  <%= link_to "Delete this dose", cocktail_dose_path(dose),
       method: :delete,
       data: { confirm: "Are you sure you want to delete this dose?" } %>
<% end  %>
<h2><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %></h2>
<h2><%= link_to "See Cocktails", cocktails_path(@cocktail) %></h2>
